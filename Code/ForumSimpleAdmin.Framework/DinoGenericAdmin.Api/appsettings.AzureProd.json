{
  "DetailedErrors": true,
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "NLog": {
    "variables": {
      "env_name": "Prod"
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Warning",
        "writeTo": "azureTableAll"
      },
      {
        "logger": "Microsoft.Hosting.Lifetime",
        "minLevel": "Warning",
        "writeTo": "lifetimeConsole, azureTableOwn",
        "filterDefaultAction": "Log",
        "filters": {
          "whenRepeated": {
            "layout": "${message}",
            "action": "Ignore"
          }
        },
        "final": true
      },
      {
        "logger": "Microsoft.*",
        "maxLevel": "Info",
        "final": true
      },
      {
        "logger": "System.Net.Http.*",
        "maxLevel": "Info",
        "final": true
      },
      {
        "ruleName": "infoLogger",
        "logger": "DinoGenericAdmin.*",
        "maxLevel": "Info",
        "writeTo": "azureTableOwn",
        "final": true
      },
      {
        "logger": "*",
        "minLevel": "Warning",
        "writeTo": "azureTableOwn"
      }
    ]
  },
  "ConnectionStrings": {
    //"MainDbContext": "Server=app.devdino.com\\dev,49299;Database=dino_admin_core_demo;user id=sa;password=iR6%k&32l@5W;TrustServerCertificate=True"

  },
  "ApiConfig": {
    "ClientBaseUrl": "",
    "ApiBaseUrl": "",
    "UploadsFolder": "uploads",
    "AllowCorsOrigins": "https://domain.com;https://admin.domain.com",
    "ServiceSettings": {
      "DisableServices": false
    }
  },
  "BlConfig": {
    "DebugMode": false,
    "StorageConfig": {
      "UseAzureBlob": true,
      "AzureBlobConnectionString": "",
      "AzureBlobContainerName": "",
      "AzureBlobBaseUrl": ""
    }
  }
}
